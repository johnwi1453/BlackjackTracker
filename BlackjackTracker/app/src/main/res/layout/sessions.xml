<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="fill_parent">
        <!-- The header row -->
        <TextView
            android:id="@+id/table_date"
            android:layout_column="1"
            android:padding="3dip"
            android:text="Date"
            android:layout_weight="0.2"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/table_location"
            android:layout_column="2"
            android:padding="3dip"
            android:text="Location"
            android:layout_weight="0.2"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/table_time"
            android:layout_column="3"
            android:padding="3dip"
            android:text="Time"
            android:layout_weight="0.2"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/table_shoes"
            android:layout_column="4"
            android:padding="3dip"
            android:text="Shoes"
            android:layout_weight="0.2"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/table_outcome"
            android:layout_column="5"
            android:padding="3dip"
            android:text="Outcome"
            android:layout_weight="0.2"
            android:textAlignment="center" />
    </TableRow>

    <!-- Data Rows -->
    <TableRow
        android:layout_width="fill_parent">
        <!-- The header row -->
        <TextView
            android:layout_column="1"
            android:padding="3dip"
            android:text="2018-08-16"
            android:layout_weight="0.2"
            android:textAlignment="center" />

        <TextView
            android:layout_column="2"
            android:padding="3dip"
            android:text="TUL"
            android:layout_weight="0.2"
            android:textAlignment="center" />

        <TextView
            android:layout_column="3"
            android:padding="3dip"
            android:text="65"
            android:layout_weight="0.2"
            android:textAlignment="center" />

        <TextView
            android:layout_column="4"
            android:padding="3dip"
            android:text="6"
            android:layout_weight="0.2"
            android:textAlignment="center" />

        <TextView
            android:layout_column="5"
            android:padding="3dip"
            android:text="125"
            android:layout_weight="0.2"
            android:textAlignment="center" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent">
        <!-- The header row -->
        <TextView
            android:layout_column="1"
            android:padding="3dip"
            android:text="2018-09-11"
            android:layout_weight="0.2"
            android:textAlignment="center" />

        <TextView
            android:layout_column="2"
            android:padding="3dip"
            android:text="SIL"
            android:layout_weight="0.2"
            android:textAlignment="center" />

        <TextView
            android:layout_column="3"
            android:padding="3dip"
            android:text="45"
            android:layout_weight="0.2"
            android:textAlignment="center" />

        <TextView
            android:layout_column="4"
            android:padding="3dip"
            android:text="3"
            android:layout_weight="0.2"
            android:textAlignment="center" />

        <TextView
            android:layout_column="5"
            android:padding="3dip"
            android:text="300"
            android:layout_weight="0.2"
            android:textAlignment="center" />
    </TableRow>


</TableLayout>